<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_index_topbar_height"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/rly_mine_editdata_personnalnote_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/back"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_mine_editdata_personnalnote_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改简介"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            />

        <RelativeLayout
            android:id="@+id/rly_mine_editdata_personnalnote_save"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存"
                android:layout_centerInParent="true"
                android:textColor="#ff5ac6de"
                android:textSize="17sp"
                />
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_mine_editdata_personnalnote_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人简介"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <RelativeLayout
        android:id="@+id/rly_mine_editdata_personnalnote"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/gray_acute_shape"
        android:layout_margin="10dp"

        >
        <EditText
            android:id="@+id/et_mine_editdata_personnalnote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="填写个人简介更容易获得关注哦"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:background="@null"
            android:textSize="13sp"
            android:layout_margin="10dp"
            android:maxLength="200"
            />
    </RelativeLayout>




</LinearLayout>