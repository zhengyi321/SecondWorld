<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/rly_tencent_mapview"
    >
    <com.tencent.tencentmap.mapsdk.maps.MapView
        android:id="@+id/mv_tencent_mapview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/rly_tencent_mapview_search"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:background="@drawable/white_round"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:layout_marginTop="51.5dp"
        >
    <ImageView
        android:id="@+id/iv_tencent_mapview_search"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@mipmap/searchicon"
        android:layout_centerInParent="true"
        />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rly_tencent_mapview_message"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:background="@drawable/white_round"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:layout_marginTop="94.5dp"
        >


    <ImageView
        android:id="@+id/iv_tencent_mapview_message"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@mipmap/messageicon"
        android:layout_centerInParent="true"
        />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_tencent_mapview_collect"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:background="@mipmap/collectvillage"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:layout_marginTop="137.5dp"
        />
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:background="@drawable/cafe_acute_angle_shape"
        android:id="@+id/rly_tencent_mapview_collect"
        android:layout_alignParentRight="true"
        android:layout_marginRight="47dp"
        android:layout_marginTop="137.5dp"
        android:visibility="gone"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rv_tencent_mapview_collect"
            />

    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tencent_mapview_message"
        android:layout_width="match_parent"
        android:layout_height="329.5dp"

        android:layout_marginTop="94.5dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="47dp"
        android:visibility="gone"
        android:alpha="0.5"
        android:background="@drawable/cafe_acute_angle_shape"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        />

<!--    android:layout_below="@id/rly_tencent_mapview_message"-->
    <ImageView
        android:id="@+id/iv_tencent_mapview_loc"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/maploc"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="160dp"
        android:layout_marginRight="15dp"
        />






    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@mipmap/bg1"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:id="@+id/rly_tencent_mapview_post_event"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <com.et.secondworld.widget.textview.RotateTextView
                    android:id="@+id/tv_tencent_mapview_shijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="事件"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:textSize="12sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rly_tencent_mapview_applyfor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <com.et.secondworld.widget.textview.RotateTextView
                    android:id="@+id/tv_tencent_mapview_apply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:textSize="12sp"
                    />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >
            <RelativeLayout
                android:id="@+id/rly_tencent_mapview_baitang_event"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <com.et.secondworld.widget.textview.RotateTextView
                    android:id="@+id/tv_tencent_mapview_baitang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="摆摊"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:textSize="12sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rly_tencent_mapview_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <com.et.secondworld.widget.textview.RotateTextView
                    android:id="@+id/tv_tencent_mapview_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="返回"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:textSize="12sp"
                    />
            </RelativeLayout>
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/bglogo"
            android:layout_centerInParent="true"
            android:clickable="true"
            />

    </RelativeLayout>
