<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loginbg"
    android:windowSoftInputMode="stateVisible"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_index_topbar_height"
        android:background="@color/transparent"
        >
        <RelativeLayout
            android:id="@+id/rly_login_register_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/back"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"/>
        </RelativeLayout>



    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入验证码"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="37dp"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="26dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已发送4位验证码至"
            android:textColor="@color/white"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tv_login_register_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+86 13795656658"
            android:textColor="#a6a9c8"
            android:textSize="13sp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="25dp"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/white_acute_angle_shape"
            android:alpha="0.7"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
            <EditText
                android:id="@+id/et_login_register_identify_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:maxLength="1"
                android:singleLine="true"
                android:background="@null"
                android:textColor="@color/black"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/white_acute_angle_shape"
            android:alpha="0.7"
            android:layout_marginLeft="25dp"

            android:focusable="true"
            android:focusableInTouchMode="true"
            >
            <EditText
                android:id="@+id/et_login_register_identify_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@null"
                android:textColor="@color/black"
                android:maxLength="1"
                android:singleLine="true"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:inputType="number"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/white_acute_angle_shape"
            android:alpha="0.7"
            android:layout_marginLeft="25dp"

            android:focusable="true"
            android:focusableInTouchMode="true"
            >
            <EditText
                android:id="@+id/et_login_register_identify_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@null"
                android:textColor="@color/black"
                android:maxLength="1"
                android:singleLine="true"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:inputType="number"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="25dp"
            android:background="@drawable/white_acute_angle_shape"
            android:alpha="0.7"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
            <EditText
                android:id="@+id/et_login_register_identify_four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:maxLength="1"
                android:background="@null"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:singleLine="true"
                android:inputType="number"
                />
        </RelativeLayout>

    </LinearLayout>



    <RelativeLayout
        android:id="@+id/rly_login_register_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/blue_half_round_shape"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.8"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:orientation="horizontal"
        android:layout_marginTop="27dp"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView

                android:id="@+id/tv_login_register_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重发短信验证码"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/steepline"
            android:layout_gravity="center_vertical"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用语音验证码"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>