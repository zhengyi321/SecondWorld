<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rly_forum_detail_two"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_index_topbar_height"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/rly_forum_detail_two_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/back"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/search"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rly_forum_detail_two_share"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/more"
            android:layout_centerInParent="true"
            />
        </RelativeLayout>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/main_index_topbar_height"
        android:layout_marginBottom="@dimen/main_bottom_height"
        android:background="@color/white"
        android:id="@+id/srv_forum_detail_two"
        android:fillViewport="true">
        <LinearLayout
            android:id="@+id/lly_forum_detail_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="16dp">

                <com.et.secondworld.widget.imageview.CircleImageView
                    android:id="@+id/civ_forum_detail_two_head"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/head"
                    android:background="@color/transparent"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/tv_forum_detail_two_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关木子"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:textColor="#8E8E8E"
                    android:layout_marginLeft="40dp"/>
                <TextView
                    android:id="@+id/tv_forum_detail_two_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关木子"
                    android:textSize="11sp"
                    android:textColor="#BEBEBE"
                    android:layout_below="@id/tv_forum_detail_two_nick"
                    android:layout_centerVertical="true"
                    android:maxEms="15"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:visibility="visible"
                    android:layout_marginLeft="40dp"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    >
                <RelativeLayout
                    android:id="@+id/rly_forum_detail_two_guanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/green_half_round_shape"

                    android:layout_centerInParent="true"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    >
                    <TextView
                        android:id="@+id/tv_forum_detail_two_guanzhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+关注"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        />
                </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <com.et.secondworld.widget.viewpage.ImageCycleView
                android:id="@+id/icv_forum_detail_two"
                android:layout_width="match_parent"
                android:layout_height="288dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16.5dp"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tv_forum_detail_two_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="唱歌如何提高自己的功力？自学
还是报班好呢?"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_marginLeft="15.5dp"
                android:layout_marginRight="15.5dp"
                />
            <TextView
                android:id="@+id/tv_forum_detail_two_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第一步练习气息，每天坚持练习1个小时
练习方法有很多种，可以参考专业老师的方法，
第二步，控制你的声带"
                android:textColor="#ff8e8e8e"
                android:textSize="13sp"
                android:layout_marginLeft="@dimen/forum_detail_left_right_margin"
                android:layout_marginRight="@dimen/forum_detail_left_right_margin"
                android:layout_marginTop="9.5dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="24dp">
            <RelativeLayout
                android:layout_width="74dp"
                android:layout_height="24dp"
                android:background="@drawable/green_acute_shape"
                android:layout_gravity="right"
                android:layout_marginRight="16dp"
                android:id="@+id/rly_forum_detail_two_soluation"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                >
                <TextView
                    android:id="@+id/tv_forum_detail_two_soluation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="解决"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_forum_detail_two_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="2016-06-07"
                android:textSize="12sp"
                android:textColor="#ff8e8e8e"
                android:layout_marginLeft="16dp"
                />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="31dp"
                android:visibility="gone"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/share"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tv_forum_detail_two_repost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6.5dp"
                    android:text="12"
                    android:textColor="#4b4b4b"
                    android:textSize="17sp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="17dp"
                    android:background="@mipmap/taskcenter"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:id="@+id/tv_forum_detail_two_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6.5dp"
                    android:text="22"
                    android:textColor="#4b4b4b"
                    android:textSize="17sp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="17dp"
                    android:background="@mipmap/thumbs"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:id="@+id/tv_forum_detail_two_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6.5dp"
                    android:text="22"
                    android:textColor="#4b4b4b"
                    android:textSize="17sp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:background="@mipmap/browse"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:id="@+id/tv_forum_detail_two_readers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6.5dp"
                    android:text="220"
                    android:textColor="#4b4b4b"
                    android:textSize="17sp"/>

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:background="#f7f7f7"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_forum_detail_two_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部回复"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="14dp"
                    />
                <TextView
                    android:id="@+id/tv_forum_detail_two_louzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="只看楼主"
                    android:textSize="14sp"
                    android:textColor="#8E8E8E"
                    android:layout_marginLeft="54dp"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="#f7f7f7"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_forum_detail_two_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <RelativeLayout
                    android:id="@+id/rly_forum_detail_two_no_comment"
                    android:layout_width="match_parent"
                    android:layout_height="150dp">
                    <TextView
                        android:id="@+id/tv_forum_detail_two_no_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="快来发表你的评论吧！"
                        android:layout_centerInParent="true"
                        android:textColor="#b0b0b0"
                        android:textSize="12sp"/>
                </RelativeLayout>
            </FrameLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_bottom_height"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >



        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5">
            <EditText
                android:id="@+id/et_forum_detail_two_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/gray_half_round_shape"
                android:hint="火不火靠你了~"
                android:textColorHint="#a4a4a4"
                android:paddingLeft="15dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/lly_forum_detail_two_zan"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageButton
                android:id="@+id/ib_forum_detail_two_zan"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@mipmap/thumbs"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                />
            <TextView
                android:id="@+id/tv_forum_detail_two_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textSize="12sp"
                android:textColor="#292929"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lly_forum_detail_two_collect"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/ib_forum_detail_two_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/collect" />
            <TextView
                android:id="@+id/tv_forum_detail_two_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textSize="12sp"
                android:textColor="#292929"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rly_forum_detail_two_comment_submit"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            >
        <LinearLayout
            android:id="@+id/lly_forum_detail_two_comment_submit"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="visible"
            >
            <ImageView
                android:id="@+id/iv_forum_detail_two_comment_submit"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@mipmap/taskcenter"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tv_forum_detail_two_comment_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textSize="12sp"
                android:textColor="#292929"
                android:layout_marginLeft="10dp"

                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
            <TextView
                android:id="@+id/tv_forum_detail_two_comment_publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#ff5ac6de"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:text="发布"
                />

        </RelativeLayout>
