    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证号码"
                android:textSize="15sp"
                android:textColor="#a5a5a9"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            >
            <EditText
                android:id="@+id/et_mine_perfect_data_identify_pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="#333333"
                android:maxLines="1"
                android:background="@null"
                android:textSize="15sp"/>

        </RelativeLayout>
    </LinearLayout>
   <!-- <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
          android:background="@color/white"
            android:layout_marginTop="1dp"
            android:paddingTop="80dp"
            android:visibility="visible"
            android:id="@+id/lly_mine_perfect_data_identify"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"

                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="138dp">
                    <RelativeLayout
                        android:id="@+id/rly_mine_perfect_data_identifyface"
                        android:layout_width="match_parent"
                        android:layout_height="138dp"
                        android:background="@drawable/post_add_gray_shape"

                        >
                        <ImageView
                            android:layout_width="54.5dp"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/postbg1"
                            android:layout_centerInParent="true"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="54.5dp"
                            android:background="@mipmap/postbg2"
                            android:layout_centerInParent="true"
                            />
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="138dp"
                        android:id="@+id/iv_mine_perfect_data_identifyface"
                        android:visibility="gone"
                        android:scaleType="fitXY"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传身份证正面照片"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"

                android:layout_marginRight="20dp"
                >

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="138dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="138dp"
                        android:background="@drawable/post_add_gray_shape"
                        android:id="@+id/rly_mine_perfect_data_identifyback"
                        >
                        <ImageView
                            android:layout_width="54.5dp"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/postbg1"
                            android:layout_centerInParent="true"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="54.5dp"
                            android:background="@mipmap/postbg2"
                            android:layout_centerInParent="true"
                            />
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/iv_mine_perfect_data_identifyback"
                        android:visibility="gone"
                        android:scaleType="fitXY"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传身份证反面照片"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp"
                    />
            </LinearLayout>

        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        ></RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_mine_editdata_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/pageloading"
        android:scaleType="centerCrop"
        android:visibility="gone"
        />
</RelativeLayout>