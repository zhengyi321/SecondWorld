<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:id="@+id/rly_first_recommend_more"

    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_acute_angle_shape"
    android:layout_centerHorizontal="true"

    >
    <ImageView
        android:id="@+id/iv_first_recommend_more_img"
        android:layout_width="match_parent"
        android:layout_height="183.5dp"
        android:background="@mipmap/imghead"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:layout_marginRight="10dp"
        />
    <ImageView
        android:id="@+id/iv_first_recommend_more_elite"
        android:layout_width="32dp"
        android:layout_height="12dp"
        android:background="@mipmap/eliteicon"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/tv_first_recommend_more_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="他们从世界各个角落找出被遗忘的美他们从世界各个角落找出被遗忘的美他们从世界各个角落找出被遗忘的美他们从世界各个角落找出被遗忘的美"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/iv_first_recommend_more_img"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxEms="28"
        android:maxLines="2"
        android:textColor="#ff000000"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_first_recommend_more_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/lly_first_recommend_more_head"
        android:orientation="horizontal">
        <com.et.secondworld.widget.imageview.CircleImageView
            android:id="@+id/civ_first_recommend_more_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/user"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_first_recommend_more_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="匿名用户"
                android:textColor="#8E8E8E"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:textSize="@dimen/module_four_rv_item_nick_size"/>
            <TextView
                android:id="@+id/tv_first_recommend_more_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浙江省温州市"
                android:textColor="#8E8E8E"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:textSize="10sp"/>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_first_recommend_more_title_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/soluationed"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="16dp"
        android:layout_alignBottom="@id/lly_first_recommend_more_head"

        />
<!--    android:layout_alignParentRight="true"-->
</RelativeLayout>
</RelativeLayout>