    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="none"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="47dp"
        android:background="@color/white"
        >
        <LinearLayout
            android:id="@+id/lly_forum_post_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:id="@+id/tv_forum_post_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浙江省温州市"
                android:drawableLeft="@mipmap/loc"
                android:layout_marginLeft="20dp"
                android:drawablePadding="10dp"
                android:textColor="#ff5ac6de"
                android:textSize="12sp"
                />
            <RelativeLayout
                android:id="@+id/rly_forum_post_loc_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                >
                <ImageButton
                    android:id="@+id/ib_forum_post_loc_close"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@mipmap/jubclose"
                    android:layout_centerVertical="true"

                    />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9f9f9"
            android:layout_alignParentBottom="true"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_bottom_height"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                >
                <ImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:background="@mipmap/look"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rly_forum_post_img"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="28dp"
                    android:background="@mipmap/image"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rly_forum_post_at"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:background="@mipmap/at"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rly_forum_post_loc"
                android:layout_width="60dp"
                android:layout_height="match_parent"

                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="29dp"
                    android:background="@mipmap/locate"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
        </LinearLayout>


</RelativeLayout>