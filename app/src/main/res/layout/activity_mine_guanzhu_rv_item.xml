<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="76.6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75.6dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        >
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <com.et.secondworld.widget.imageview.CircleImageView
            android:id="@+id/civ_mine_guanzhu_rv_item_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/head"

            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="3">
        <TextView
            android:id="@+id/tv_mine_guanzhu_rv_item_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关木子"
            android:textColor="#8E8E8E"
            android:textSize="14sp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/tv_mine_guanzhu_rv_item_personnalnote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="外表柔弱，内心住着女汉子 "
            android:textColor="#BEBEBE"
            android:textSize="11sp"
            android:maxLines="2"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">
        <RelativeLayout
            android:id="@+id/rly_mine_guanzhu_rv_item_guanzhu"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:background="@drawable/green_half_round_shape"
            android:layout_centerInParent="true"
            >
            <TextView
                android:id="@+id/tv_mine_guanzhu_rv_item_guanzhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="互相关注"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                />
        </RelativeLayout>

    </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efefef"/>
</LinearLayout>