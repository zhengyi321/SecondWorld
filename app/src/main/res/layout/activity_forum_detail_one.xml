<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rly_forum_detail_one"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_index_topbar_height"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/rly_forum_detail_one_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/back"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:visibility="gone"
            >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/search"
            android:layout_centerInParent="true"
            />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rly_forum_detail_one_share"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/more"
            android:layout_centerInParent="true"
            />
        </RelativeLayout>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/main_index_topbar_height"
        android:layout_marginBottom="@dimen/main_bottom_height"
        android:background="@color/white"
        android:fillViewport="true">
        <LinearLayout
            android:id="@+id/lly_forum_detail_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_forum_detail_one_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="唱歌如何提高自己的功力？自学
还是报班好呢?"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:layout_marginTop="21dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="16dp">
                <com.et.secondworld.widget.imageview.CircleImageView
                    android:id="@+id/civ_forum_detail_one_head"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/head"
                    android:layout_centerVertical="true"
                    app:type="circle"/>
                <TextView
                    android:id="@+id/tv_forum_detail_one_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关木子"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:textColor="#8E8E8E"
                    android:layout_marginLeft="40dp"/>
                <TextView
                    android:id="@+id/tv_forum_detail_one_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关木子"
                    android:layout_below="@id/tv_forum_detail_one_nick"

                    android:layout_centerVertical="true"
                    android:textSize="11sp"
                    android:textColor="#BEBEBE"
                    android:maxEms="15"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:visibility="visible"
                    android:layout_marginLeft="40dp"

                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    >
                    <RelativeLayout
                        android:id="@+id/rly_forum_detail_one_guanzhu"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:background="@drawable/green_half_round_shape"
                        android:layout_centerVertical="true"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        >
                        <TextView
                            android:id="@+id/tv_forum_detail_one_guanzhu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关注"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/iv_forum_detail_one_shop_times_pay"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:background="@mipmap/hotsearch"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <ImageView
                android:id="@+id/iv_forum_detail_one_img1"
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/forumdetailone1"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tv_forum_detail_one_content1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第一步练习气息，每天坚持练习1个小时
练习方法有很多种，可以参考专业老师的方法，
第二步，控制你的声带"
                android:textColor="#8E8E8E"
                android:textSize="13sp"
                android:layout_marginLeft="@dimen/forum_detail_left_right_margin"
                android:layout_marginRight="@dimen/forum_detail_left_right_margin"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/iv_forum_detail_one_img2"
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/forumdetailone2"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tv_forum_detail_one_content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第一步练习气息，每天坚持练习1个小时
练习方法有很多种，可以参考专业老师的方法，
第二步，控制你的声带"
                android:textColor="#8E8E8E"
                android:textSize="13sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/forum_detail_left_right_margin"
                android:layout_marginRight="@dimen/forum_detail_left_right_margin"

                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/iv_forum_detail_one_img3"
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/forumdetailone3"
                android:visibility="gone"
                android:scaleType="fitCenter"
                />
            <TextView
                android:id="@+id/tv_forum_detail_one_content3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第一步练习气息，每天坚持练习1个小时
练习方法有很多种，可以参考专业老师的方法，
第二步，控制你的声带"
                android:textColor="#8E8E8E"
                android:textSize="13sp"
                android:layout_marginTop="20dp"

                android:layout_marginLeft="@dimen/forum_detail_left_right_margin"
                android:layout_marginRight="@dimen/forum_detail_left_right_margin"
                android:visibility="gone"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="31dp"
                android:visibility="gone"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/share"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6.5dp"
                    android:text="12"
                    android:textColor="#4b4b4b"
                    android:textSize="17sp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="17dp"
                    android:background="@mipmap/taskcenter"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6.5dp"
                    android:text="22"
                    android:textColor="#4b4b4b"
                    android:textSize="17sp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="17dp"
                    android:background="@mipmap/thumbs"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6.5dp"
                    android:text="22"
                    android:textColor="#4b4b4b"
                    android:textSize="17sp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:background="@mipmap/browse"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6.5dp"
                    android:text="220"
                    android:textColor="#4b4b4b"
                    android:textSize="17sp"/>

            </LinearLayout>
            <TextView
                android:id="@+id/tv_forum_detail_one_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-06-07"
                android:textSize="12sp"
                android:textColor="#ff8e8e8e"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"

                android:layout_marginTop="10dp"
                android:background="#f7f7f7"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_forum_detail_one_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部回复"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="14dp"
                    />
                <TextView
                    android:id="@+id/tv_forum_detail_one_louzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="只看楼主"
                    android:textSize="14sp"
                    android:textColor="#8E8E8E"
                    android:layout_marginLeft="54dp"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="#f7f7f7"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_forum_detail_one_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
                <RelativeLayout
                    android:id="@+id/rly_forum_detail_one_no_comment"
                    android:layout_width="match_parent"
                    android:layout_height="150dp">
                    <TextView
                        android:id="@+id/tv_forum_detail_one_no_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="快来发表你的评论吧！"
                        android:layout_centerInParent="true"
                        android:textColor="#b0b0b0"
                        android:textSize="12sp"/>
                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_bottom_height"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5">
            <EditText
                android:id="@+id/et_forum_detail_one_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/gray_half_round_shape"
                android:hint="火不火靠你了~"
                android:textColorHint="#a4a4a4"
                android:paddingLeft="15dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/lly_forum_detail_one_zan"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/ib_forum_detail_one_zan"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@mipmap/thumbs"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:clickable="false"

                />
            <TextView
                android:id="@+id/tv_forum_detail_one_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textSize="12sp"
                android:textColor="#292929"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

        <!--
        <RelativeLayout
            android:id="@+id/rly_forum_detail_three_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3">
            <TextView
                android:id="@+id/tv_forum_detail_three_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textSize="10sp"
                android:textColor="#b2b2b5"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:drawableTop="@mipmap/weixin"
                android:layout_marginRight="20dp"
                android:drawablePadding="5dp"
                />

        </RelativeLayout>-->
        <LinearLayout
            android:id="@+id/lly_forum_detail_one_collect"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageButton
                android:id="@+id/ib_forum_detail_one_collect"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@mipmap/collect"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                />
            <TextView
                android:id="@+id/tv_forum_detail_one_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textSize="12sp"
                android:textColor="#292929"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rly_forum_detail_one_comment_submit"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            >
            <LinearLayout

                android:id="@+id/lly_forum_detail_one_comment_submit"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/iv_forum_detail_one_comment_submit"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@mipmap/taskcenter"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tv_forum_detail_one_comment_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:textSize="12sp"
                    android:textColor="#292929"
                    android:layout_marginLeft="10dp"

                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_forum_detail_one_comment_publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#ff5ac6de"
                android:layout_centerInParent="true"
                android:text="发布"
                android:visibility="gone"
                />

</RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rly_forum_detail_one_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_forum_detail_one_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pageloading"
            android:scaleType="center"
            android:layout_centerInParent="true"

            />
    </RelativeLayout>
