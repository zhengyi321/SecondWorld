<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.et.secondworld.widget.imageview.RoundImageView
        android:id="@+id/riv_adcycleview_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/white"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        app:round_corner="2dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/black_trans_jianbian"
        android:paddingBottom="3.5dp"
        android:paddingTop="3.5dp"
        android:layout_alignParentBottom="true"

        >
    <TextView
        android:id="@+id/tv_adbanner_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:text="那些年入的坑爹的电子产品"
        android:layout_marginTop="3.5dp"
        android:layout_marginBottom="3.5dp"
        android:layout_marginLeft="11.5dp"
        android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>