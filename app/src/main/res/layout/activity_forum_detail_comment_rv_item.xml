<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lly_forum_detail_comment_rv_item"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        >
        <com.et.secondworld.widget.imageview.CircleImageView
            android:id="@+id/civ_forum_detail_comment_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/head"
            app:type="circle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23dp"
            />
        <RelativeLayout
            android:id="@+id/rly_forum_detail_comment_nick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_forum_detail_comment_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关木子"
                android:textColor="#8E8E8E"
                android:textSize="13sp"
                android:textStyle="bold"
                />
                <TextView
                    android:id="@+id/tv_forum_detail_comment_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="作者"
                    android:layout_toRightOf="@id/rly_forum_detail_comment_nick"
                    android:textColor="#8E8E8E"
                    android:textSize="11sp"
                    android:background="@drawable/gray_half_round_shape"
                   android:layout_marginLeft="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_forum_detail_comment_bad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="踩"
            android:textColor="#676767"
            android:textSize="12sp"
            android:drawableLeft="@mipmap/cai"
            android:layout_centerVertical="true"
            android:drawablePadding="7dp"
            android:layout_marginRight="28dp"
            android:visibility="gone"
            />
        <!--
        <TextView
            android:id="@+id/tv_forum_detail_comment_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="103"
            android:textColor="#676767"
            android:textSize="12sp"
            android:drawableLeft="@mipmap/zan"
            android:layout_centerVertical="true"
            android:drawablePadding="7dp"
            android:layout_marginRight="10dp"
            />-->
        <LinearLayout
            android:id="@+id/lly_forum_detail_comment_good"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"

            android:layout_centerVertical="true"
            android:orientation="vertical"
            >
        <ImageButton
            android:id="@+id/ib_forum_detail_comment_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/zan"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:clickable="false"
            />
            <TextView
                android:id="@+id/tv_forum_detail_comment_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#3b3b3b"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginLeft="70dp"

        android:layout_marginBottom="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_forum_detail_comment_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="我看到你发的贴子，很感兴趣可以
一起交流一下吗？"
            android:textColor="#3b3b3b"
            android:textSize="13sp"
            />
            <TextView
                android:id="@+id/tv_forum_detail_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-3-25"
                android:textColor="#BEBEBE"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:textSize="11sp"
                />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rly_forum_detail_comment_backlist"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        <TextView
            android:id="@+id/tv_forum_detail_comment_backlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看11条回复"
            android:textSize="13sp"
            android:textColor="#aeaeae"
            android:layout_marginTop="13dp"
            android:drawableRight="@mipmap/arrow"
            android:drawablePadding="15dp"
            />
        </RelativeLayout>
    </LinearLayout>
        <RelativeLayout
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:clickable="true"
            >

        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="56dp"
        android:background="#f7f7f7"
        />

</LinearLayout>