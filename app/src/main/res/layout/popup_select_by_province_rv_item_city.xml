<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="80dp"
    android:layout_height="40dp"
    android:background="@drawable/gray_dashwidth_white_shape"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/rly_popup_select_by_province_rv_item_city"
    >
    <ImageView
        android:id="@+id/iv_popup_select_by_province_rv_item_city"
        android:layout_width="11.7dp"
        android:layout_height="13dp"
        android:background="@mipmap/loc"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tv_popup_select_by_province_rv_item_city"
        />
    <TextView
        android:id="@+id/tv_popup_select_by_province_rv_item_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="山东"
        android:textColor="#4b4b4b"
        android:layout_centerInParent="true"
        android:textSize="12sp"
        />
</RelativeLayout>