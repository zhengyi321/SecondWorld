<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rly_mine_all_shop_rv_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ececec">
    <LinearLayout
        android:id="@+id/lly_mine_all_shop_rv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <com.et.secondworld.widget.imageview.RoundImageView
        android:id="@+id/riv_mine_all_shop_rv_item_image"
        android:layout_width="match_parent"
        android:layout_height="183.5dp"
        android:src="@mipmap/imghead"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        app:round_rightUp="2dp"
        app:round_leftUp="2dp"
        app:round_leftDown="0dp"
        app:round_rightDown="0dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="@drawable/up_right_down_acute_shape"
        >
        <TextView
            android:id="@+id/tv_mine_all_shop_rv_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="唱歌提高自己的功力？"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/tv_mine_all_shop_rv_item_title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            >
            <com.et.secondworld.widget.imageview.CircleImageView
                android:id="@+id/civ_mine_all_shop_rv_item_head"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/head"
                app:type="circle"
                android:layout_gravity="center_vertical"

                android:layout_alignParentBottom="true"
                />

            <TextView
                android:id="@+id/tv_mine_all_shop_rv_item_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="soul灵魂"
                android:textColor="#8E8E8E"
                android:textSize="14sp" />
            <RelativeLayout
                android:id="@+id/rly_mine_all_shop_rv_item_praise"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:layout_alignParentRight="true"

                >
            <ImageView
                android:id="@+id/iv_mine_all_shop_rv_item_praise"
                android:layout_width="16.21dp"
                android:layout_height="16.61dp"
                android:background="@mipmap/thumbs"
                android:layout_centerInParent="true"
                />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="41dp"
            android:layout_height="22.2dp"
            android:background="@mipmap/shopbg"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="222"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
</RelativeLayout>