<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"

    >
<!--    android:id="@+id/lly_comment_and_at"-->
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昨天"
        android:textColor="#b2b2b5"
        android:textSize="14sp"
        android:layout_marginLeft="29dp"
        android:visibility="gone"
        android:layout_marginTop="17dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">
        <com.et.secondworld.widget.imageview.CircleImageView
            android:id="@+id/civ_comment_and_at_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/head"
            android:layout_marginBottom="10dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/civ_comment_and_at_head"
            >
            <TextView
                android:id="@+id/tv_comment_and_at_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关木子"
                android:textSize="14sp"
                android:textColor="#8E8E8E"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3天前"
                android:textSize="11sp"
                android:textColor="#BEBEBE"
                android:layout_marginLeft="15dp"
                android:id="@+id/tv_comment_and_at_time"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_comment_and_at_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赞同你的帖子"
            android:textSize="13sp"
            android:textColor="#3d3d3d"
            android:layout_below="@id/civ_comment_and_at_head"

            android:layout_marginBottom="10dp"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_dashwidth_white_shape"
            android:layout_alignParentRight="true"
            android:id="@+id/rly_comment_and_at_back"
            android:layout_marginRight="10dp"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回复"
                android:textColor="#8E8E8E"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/lly_comment_and_at"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rly_comment_and_at_back_mine"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_comment_and_at_back_b"
            android:text="回复 "
            android:textSize="15sp"
            android:textColor="#2c2c2c"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_comment_and_at_back_c"
            android:text="\@A君"
            android:textSize="15sp"
            android:visibility="gone"
            android:textColor="#2374ff"
            android:layout_toRightOf="@id/tv_comment_and_at_back_b"
            android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/tv_comment_and_at_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11"
        android:textColor="#2c2c2c"
        android:textSize="13sp"
        android:layout_toRightOf="@id/tv_comment_and_at_back_c"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="11dp"
        />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f7f7"
        android:id="@+id/rly_comment_and_at_mine"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_comment_and_at_mine_a"
        android:text="\@A君"
        android:visibility="gone"
        android:textSize="15sp"
        android:textColor="#2374ff"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_comment_and_at_mine_b"
        android:text=" 回复 "
        android:layout_toRightOf="@id/tv_comment_and_at_mine_a"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:textColor="#2c2c2c"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_comment_and_at_mine_c"
        android:text="\@A君"
        android:textSize="15sp"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:textColor="#2374ff"
        android:layout_toRightOf="@id/tv_comment_and_at_mine_b"
        />

    <TextView
        android:id="@+id/tv_comment_and_at_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="那些年你买的坑爹的电子产品那些年你买的坑爹的电子产品那些年你买的坑爹的电子产品那些年你买的坑爹的电子产品那些年你买的坑爹的电子产品那些年你买的坑爹的电子产品"
        android:textColor="#2c2c2c"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/tv_comment_and_at_mine_c"

        />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rly_comment_and_at_article"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#f7f7f7">
        <com.et.secondworld.widget.imageview.RoundImageView
            android:id="@+id/iv_comment_and_at_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:round_corner="2dip"
            android:src="@mipmap/image"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/iv_comment_and_at_img"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/rly_comment_and_at_title"
            >
        <TextView
            android:id="@+id/tv_comment_and_at_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="那些年你买的坑爹的电子产品"
            android:textColor="#2c2c2c"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tv_comment_and_at_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="那些年你买的坑爹的电子产品"
            android:textColor="#2c2c2c"
            android:textSize="13sp"
            android:layout_marginLeft="10dp"
            android:maxLines="2"
            android:layout_below="@id/tv_comment_and_at_title"
            android:layout_marginTop="5dp"
            />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="57dp"
            android:layout_marginLeft="19dp"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/tv_comment_and_at_parise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="17sp"
                android:textColor="#9a9a9a"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赞"
                android:textSize="17sp"
                android:textColor="#9a9a9a"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_comment_and_at_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40"
                android:textSize="17sp"
                android:textColor="#9a9a9a"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论"
                android:textSize="17sp"
                android:textColor="#9a9a9a"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"

                />

        </LinearLayout>

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#eeeeee"
        />
    </LinearLayout>
</LinearLayout>