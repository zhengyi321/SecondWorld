<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:layout_marginBottom="82dp"
    >
<!--
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="274dp"
        android:background="@drawable/white_acute_angle_shape"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择支付方式"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_centerInParent="true"
                android:layout_marginTop="13dp"
                />
        </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dcdcdc"
                />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实付金额："
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tv_dialog_pay_away_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥ 0"
                    android:textColor="#ff004e"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dcdcdc"
            />
        <RelativeLayout
            android:id="@+id/rly_dialog_pay_away_zfb"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/zhifubao"
                android:text="支付宝"
                android:textSize="12sp"
                android:textColor="#7d7d7d"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:drawablePadding="10dp"
                />
            <CheckBox
                android:id="@+id/cb_dialog_pay_away_zfb"
                android:layout_width="17.61dp"
                android:layout_height="17.61dp"
                android:button="@drawable/agree_checked_selector"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dcdcdc"
            />
        <RelativeLayout
            android:id="@+id/rly_dialog_pay_away_wx"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/weixinpay"
                android:text="微信"
                android:textSize="12sp"
                android:textColor="#7d7d7d"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:drawablePadding="10dp"
                />
            <CheckBox
                android:id="@+id/cb_dialog_pay_away_wx"
                android:layout_width="17.61dp"
                android:layout_height="17.61dp"
                android:button="@drawable/agree_checked_selector"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dcdcdc"
            />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/red_half_round_shape"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="34dp"
                android:layout_marginTop="7dp"
                android:id="@+id/rly_dialog_pay_away_submit"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认支付"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

    </LinearLayout>
</RelativeLayout>