<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/rly_mine_shop_editdata_change"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:background="#ececec"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_index_topbar_height"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/rly_mine_shop_editdata_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:clickable="true"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/back"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:layout_marginLeft="15dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="变更资料"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/bt_mine_shop_editdata_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传"
            android:textSize="17sp"
            android:textColor="#ff5ac6de"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@null"/>
    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/white"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店名:"
                    android:textSize="15sp"
                    android:textColor="#a5a5a9"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                >
                <EditText
                    android:id="@+id/et_mine_shop_editdata_shopname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:hint="请输入店名"
                    android:text=""
                    android:textColor="#333333"
                    android:textColorHint="@color/gray"
                    android:maxLines="1"
                    android:background="@null"
                    android:textSize="15sp"/>

            </RelativeLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址:"
                    android:textSize="15sp"
                    android:textColor="#a5a5a9"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                >
                <EditText
                    android:id="@+id/et_mine_shop_editdata_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:hint="请输入地址"
                    android:text=""
                    android:textColor="#333333"
                    android:textColorHint="@color/gray"
                    android:maxLines="1"
                    android:background="@null"
                    android:textSize="15sp"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行业:"
                    android:textSize="15sp"
                    android:textColor="#a5a5a9"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="2"
                >
                <TextView
                    android:id="@+id/tv_mine_shop_editdata_trade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:text="请选择行业"
                    android:textIsSelectable="true"
                    android:textColor="#333333"
                    android:textSize="15sp"/>
                <!--<Spinner
                    android:id="@+id/sp_mine_shop_editdata_trade1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:spinnerMode="dropdown"
                    android:dropDownWidth="wrap_content"
                    android:dropDownHorizontalOffset="20dp"
                    android:background="@drawable/spinner_drop_down_shape"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    />
                <Spinner
                    android:id="@+id/sp_mine_shop_editdata_trade2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:spinnerMode="dropdown"
                    android:dropDownWidth="wrap_content"
                    android:dropDownHorizontalOffset="20dp"
                    android:background="@drawable/spinner_drop_down_shape"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    />-->

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="社会统一信用代码:"
                    android:textSize="15sp"
                    android:textColor="#a5a5a9"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                >
                <EditText
                    android:id="@+id/et_mine_shop_editdata_socialcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:hint="请输入社会统一信用代码"
                    android:text=""
                    android:textColor="#333333"
                    android:textColorHint="@color/gray"
                    android:maxLines="1"
                    android:background="@null"
                    android:textSize="15sp"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名:"
                    android:textSize="15sp"
                    android:textColor="#a5a5a9"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                >
                <EditText
                    android:id="@+id/et_mine_shop_editdata_realname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:hint="请输入身份证姓名"
                    android:text=""
                    android:textColor="#333333"
                    android:textColorHint="@color/gray"
                    android:maxLines="1"
                    android:background="@null"
                    android:textSize="15sp"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证号码:"
                    android:textSize="15sp"
                    android:textColor="#a5a5a9"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                >
                <EditText
                    android:id="@+id/et_mine_shop_editdata_identifycode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:hint="请输入18位身份证号码"
                    android:text=""
                    android:textColor="#333333"
                    android:textColorHint="@color/gray"
                    android:maxLines="1"
                    android:background="@null"
                    android:textSize="15sp"/>

            </RelativeLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="30dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="16dp"
                android:text="营业执照"
                android:textSize="14sp"
                android:textColor="#4b4b4b"
                />

            <RelativeLayout
                android:id="@+id/rly_mine_shop_editdata_licence"
                android:layout_width="138.6dp"
                android:layout_height="78dp"
                android:background="@drawable/post_add_gray_shape"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="16dp"
                >
                <ImageView
                    android:layout_width="28.9dp"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/postbg1"
                    android:layout_centerInParent="true"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="28.9dp"
                    android:background="@mipmap/postbg2"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <ImageView
                android:id="@+id/iv_mine_shop_editdata_licence"
                android:layout_width="138.6dp"
                android:layout_height="78dp"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="16dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="17dp"
                android:text="尺寸为375px*135px,请您按照比例上传"
                android:textSize="14sp"
                android:textColor="#4b4b4b"
                android:visibility="gone"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="30dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="16dp"
                android:text="身份证"
                android:textSize="14sp"
                android:textColor="#4b4b4b"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_marginTop="48dp"
                android:visibility="visible"

                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    >
                    <RelativeLayout
                        android:layout_width="138.6dp"
                        android:layout_height="78dp">
                        <RelativeLayout
                            android:id="@+id/rly_mine_shop_editdata_identifyface"
                            android:layout_width="match_parent"
                            android:layout_height="78dp"
                            android:background="@drawable/post_add_gray_shape"

                            >
                            <ImageView
                                android:layout_width="54.5dp"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/postbg1"
                                android:layout_centerInParent="true"
                                />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="54.5dp"
                                android:background="@mipmap/postbg2"
                                android:layout_centerInParent="true"
                                />
                        </RelativeLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="78dp"
                            android:id="@+id/iv_mine_shop_editdata_identifyface"
                            android:visibility="gone"
                            android:scaleType="fitXY"
                            />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上传法人身份证正面照片"
                        android:textColor="#999999"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"

                    android:layout_marginRight="16dp"
                    >

                    <RelativeLayout

                        android:layout_width="138.6dp"
                        android:layout_height="78dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="78dp"
                            android:background="@drawable/post_add_gray_shape"
                            android:id="@+id/rly_mine_shop_editdata_identifyback"
                            >
                            <ImageView
                                android:layout_width="54.5dp"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/postbg1"
                                android:layout_centerInParent="true"
                                />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="54.5dp"
                                android:background="@mipmap/postbg2"
                                android:layout_centerInParent="true"
                                />
                        </RelativeLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/iv_mine_shop_editdata_identifyback"
                            android:visibility="gone"
                            android:scaleType="fitXY"
                            />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上传法人身份证反面照片"
                        android:textColor="#999999"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp"
                        />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rly_mine_shop_editdata_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/tv_mine_shop_editdata_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注销店铺"
                android:textColor="#ff5ac6de"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                />
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/arrow"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
        </RelativeLayout>






    </LinearLayout>
</RelativeLayout>