<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/lly_first_module_four_head"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择行业"
            android:textColor="#ff000000"
            android:layout_marginLeft="16dp"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            />
        <RelativeLayout
            android:layout_width="253.5dp"
            android:layout_height="28dp"
            android:background="@drawable/gray_half_round_shape"
            android:layout_marginLeft="5.5dp"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部"
                android:textColor="#ffbebebe"
                android:textSize="14sp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                />
            <Spinner
                android:id="@+id/sp_first_module_four_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:spinnerMode="dropdown"
                android:dropDownWidth="wrap_content"
                android:dropDownHorizontalOffset="20dp"
                android:background="@drawable/spinner_drop_down_shape"
                android:layout_gravity="center_vertical"

                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="#ececec">
        <com.et.secondworld.widget.viewpage.ImageInCycleView
            android:id="@+id/icv_first_module_four"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:visibility="visible"
            />
    </RelativeLayout>
</LinearLayout>