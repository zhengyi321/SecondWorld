<?xml version="1.0" encoding="utf-8"?>
<com.et.secondworld.widget.behavior.DisInterceptNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/middle_layout"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="200dp"
    android:tag="middle"
    app:layout_collapseMode="parallax"

    app:layout_collapseParallaxMultiplier="0.5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lly_mine_nick"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_mine_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关木子"
                android:textSize="18sp"
                android:textColor="#4b4b4b"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号:"
                    android:textSize="13sp"
                    android:textColor="#8e8e93"/>
                <TextView
                    android:id="@+id/tv_mine_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dsdsdkjwke"
                    android:textSize="13sp"
                    android:textColor="#8e8e93"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8e8e93"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            />
        <RelativeLayout
            android:id="@+id/rly_mine_personnalnote"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/lly_mine_nick"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="21dp">
            <TextView
                android:id="@+id/tv_mine_personnalnote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8e8e93"
                android:text="外表柔弱，内心住着女汉字"

                />
        </RelativeLayout>




        <LinearLayout
            android:id="@+id/lly_mine_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/rly_mine_personnalnote"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/lly_mine_get_good"
                >
                <TextView
                    android:id="@+id/tv_mine_get_good_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3200"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#2374ff"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />
                <!--                        android:textSize="18sp"-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获赞"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#4b4b4b"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />
                <!--                        android:textSize="18sp"-->
            </LinearLayout>
            <!--
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textColor="#f6f6f6"
            android:layout_gravity="center_vertical"
            />-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/graysteepline"
                android:layout_gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/lly_mine_guanzhu"
                >

                <TextView
                    android:id="@+id/tv_mine_guanzhu_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1200"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#2374ff"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#4b4b4b"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>
            <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textColor="#f6f6f6"
            android:layout_gravity="center_vertical"
            />-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/graysteepline"
                android:layout_gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/lly_mine_fans"
                >

                <TextView
                    android:id="@+id/tv_mine_fans_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#2374ff"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粉丝"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#4b4b4b"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>
            <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textColor="#f6f6f6"
            android:layout_gravity="center_vertical"
            />-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/graysteepline"
                android:layout_gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/lly_mine_footmark"
                >

                <TextView
                    android:id="@+id/tv_mine_footmark_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#2374ff"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="足迹"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#4b4b4b"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:id="@+id/rly_mine_shop_open"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="6dp"
                android:background="@mipmap/vipdpbg"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/vipdianpu"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="21dp"/>
                <TextView
                    android:id="@+id/tv_mine_open_or_mine_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开通店铺"
                    android:textColor="#b57b41"
                    android:textSize="14sp"
                    android:layout_marginLeft="60dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#b57b41"
                    android:textSize="12sp"
                    android:layout_marginRight="40dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"

                    />
                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/arrow"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rly_mine_my_shop"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="6dp"
                android:background="@mipmap/vipdpbg"
                android:visibility="gone"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/vipdianpu"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="21dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的店铺"
                    android:textColor="#b57b41"
                    android:textSize="14sp"
                    android:layout_marginLeft="60dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#b57b41"
                    android:textSize="12sp"
                    android:layout_marginRight="40dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"

                    />
                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/arrow"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/blue_half_round_shape"
            android:layout_alignParentRight="true"
            android:id="@+id/rly_mine_editdata"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/tv_mine_editdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑资料"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="14sp"
                />
        </RelativeLayout>
    </RelativeLayout>
</com.et.secondworld.widget.behavior.DisInterceptNestedScrollView>